{
    "name": "OpenDXA - Open Source Dislocation Extraction Algorithm",
    "version": "1.0.0",
    "artifacts": [{
        "name": "dislocations",
        "resultFile": "dislocations.msgpack",
        "exportConfig": {
            "name": "DislocationExporter",
            "type": "glb",
            "opts": {
                "lineWidth": 0.8,
                "colorByType": true,
                "material": {
                    "baseColor": [1.0, 0.5, 0.0, 1.0],
                    "metallic": 0.0,
                    "roughness": 0.8,
                    "emissive": [0.0, 0.0, 0.0]
                }
            }
        }
    }, {
        "name": "structure identification",
        "resultFile": "atoms.msgpack",
        "exportConfig": {
            "name": "AtomisticExporter",
            "handler": "exportAtomsTypeToGLB",
            "type": "glb"
        }
    }, {
        "name": "defect mesh",
        "resultFile": "defect_mesh.msgpack",
        "exportConfig": {
            "name": "MeshExporter",
            "type": "glb",
            "opts": {
                "material": {
                    "baseColor": [1.0, 1.0, 1.0, 1.0],
                    "metallic": 0.0,
                    "roughness": 0.0,
                    "emissive": [0.0, 0.0, 0.0]
                },
                "smoothIterations": 8,
                "generateNormals": true,
                "enableDoubleSided": true
            }
        }
    }, {
        "name": "interface mesh",
        "resultFile": "interface_mesh.msgpack",
        "exportConfig": {
            "name": "MeshExporter",
            "type": "glb",
            "opts": {
                "material": {
                    "baseColor": [1.0, 1.0, 1.0, 1.0],
                    "metallic": 0.0,
                    "roughness": 0.0,
                    "emissive": [0.0, 0.0, 0.0]
                },
                "smoothIterations": 8,
                "generateNormals": true,
                "enableDoubleSided": true
            }
        }
    }, {
        "name": "simulation cell",
        "resultFile": "simulation_cell.msgpack"
    }, {
        "name": "structure analysis",
        "resultFile": "structures_stats.msgpack"
    }],
    "entrypoint": {
        "bin": "opendxa",
        "args": {
            "crystalStructure": {
                "type": "enum",
                "default": "BCC",
                "values": ["FCC", "BCC", "SC", "HCP", "CUBIC_DIAMOND", "HEX_DIAMOND"]
            },
            "identificationMode": {
                "type": "enum",
                "default": "PTM",
                "values": ["CNA", "PTM", "DIAMOND"]
            },
            "maxTrialCircuitSize": { 
                "type": "number",
                "default": 14.0
            },
            "circuitStretchability": {
                "type": "number",
                "default": 9.0
            },
            "rmsd": { 
                "type": "number",
                "default": 0.10
            },
            "defectSmoothingLevel": {
                "type": "number",
                "default": 8
            },
            "lineSmoothingLevel": {
                "type": "number",
                "default": 5
            },
            "linePointInterval": {
                "type": "number",
                "default": 2.5
            },
            "onlyPerfectDislocations": {
                "type": "boolean",
                "default": false
            },
            "markCoreAtoms": {
                "type": "boolean",
                "default": false
            },
            "structureIdentificationOnly": {
                "type": "boolean",
                "default": false
            }
        }
    }
}