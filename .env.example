# Server Configuration
SERVER_PORT=5000
SERVER_HOST=0.0.0.0
NODE_ENV=development

# Client URLs
CLIENT_HOST=https://yourdomain.com
CLIENT_DEV_HOST=http://localhost:3000

# Database
MONGO_URI=mongodb://localhost:27017/opendxa

# JWT
SECRET_KEY=your_secret_key_here
JWT_EXPIRATION_DAYS=7d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# MinIO / S3
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=trajectories

# Temporary Directory
TRAJECTORY_DIR=/tmp/opendxa

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:5000/api/v1/auth/github/callback

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/v1/auth/google/callback

# Microsoft OAuth
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_CALLBACK_URL=http://localhost:5000/api/v1/auth/microsoft/callback

# Frontend redirect URL after OAuth success
OAUTH_SUCCESS_REDIRECT=http://localhost:3000/auth/oauth/success
